# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# REQUIRED: Get your Claude API key from https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# REQUIRED: Generate a secure JWT secret (32+ characters)
# You can generate one with: openssl rand -base64 32
JWT_SECRET=your_very_strong_jwt_secret_at_least_32_characters_long_here

# Database Configuration
DB_PASSWORD=your_secure_database_password
DB_HOST=postgres
DB_PORT=5433
DB_NAME=flashcards
DB_USERNAME=postgres

# CORS Configuration (comma-separated domains)
# For development: http://localhost:3000
# For production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Application Configuration
LOG_LEVEL=INFO
SERVER_PORT=8080

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api